// Program to calculate sum of 2 numbers
#include <stdio.h>
int main ()
{
    float a, b;
    printf("Enter the First Number\n");
    scanf("%f",&a);
    printf("Enter the Second Number\n");
    scanf("%f",&b);
    printf("The sum of the Entered Two Numbers is : %f\n",a+b);
    return 0;
}


// Program to calculate area of rectangle (User Input)

#include <stdio.h>
int main ()
{
    float l, b;
    printf("Enter the Length of the Rectangle\n");
    scanf("%f",&l );
    printf("Enter the Breath of the Rectangle\n");
    scanf("%f",&b);
    printf("The area of Rectangle is %f", l*b);
    return 0;
}


// Program to calculate area of rectangle (Hard Input)
#include <stdio.h>
int main ()
{
    float l, b;
    l=65;
    b=71;
    printf("The Length of the Rectangle is %f\n",l);
    printf("The Breadth of the Rectangle is %f\n",b);
    printf("The area of Rectangle is %f", l*b);

    return 0;
}

// Program to calculate the area of circle and modify the same program to calculate the volume of cylinder using its radius and hieght
#include <stdio.h>
int main()
{
    float r,h,rr,pi;
    pi=3.14;
    printf("Enter the Radius of your circle\n");
    scanf("%f",&r);
    printf("The area of circle is %f\n", pi*r*r);
printf("Enter the height of the cylinder");
scanf("%f",&h);
printf("Enter the Radius of the Cylinder");
scanf("%f",&rr);
printf("\nThe volume of your cylinder is :%f",pi*rr*rr*h);
    return 0;

}

// Program to calculate simple interest
#include <stdio.h>
int main()
{
    float p,roi,t;
    printf("Enter the Amount of Loan\n");
    scanf("%f",&p);
    printf("Enter the Rate of interest\n ");
    scanf("%f",&roi);
    printf("Enter the Duration of Loan(In years)\n");
    scanf("%f",&t);
    printf("The interest of Loan for one year is %f\n", p*roi/100);
printf("The total interest for the duration of the loan period is %f\n", p*roi/100*t);
return 0;
}


// Program to convert temperature in Fahrenheit to celcius
#include<stdio.h>
int main()
{
float f;
printf("Enter the temperature in Fahrenheit\n");
scanf("%f",&f);
printf("The temperature in Celcius is %f\n", (f-32)*5/9);
return 0;
}


// Program to calculate the area of triangle with Thales or Herons formula
#include<stdio.h>
#include<math.h>
int main ()
{
    float a,b,c,s,area;
    printf("Enter the length of 1st side %f\n", a);
    scanf("%f",&a);
    printf("Enter the length of 2nd side %f\n", b);
    scanf("%f",&b);
    printf("Enter the length of 3rd side %f\n", c);
    scanf("%f",&c);
    s=(a+b+c)/2;
     area = sqrt(s*(s-a)*(s-b)*(s-c));
    printf("Area of Triangle is :%f", area);
}

// Program to display sum of all digits of 3 digit number and number to accepted from the user.
#include <stdio.h>
int main()
{
    float a,b,c;
    printf("Enter the 1st Number");
    scanf("%f",&a)
    printf("Enter the 2nd Number");
    scanf("%f",&b)
    printf("Enter the 3rd Number");
    scanf("%f",&c)
    printf("Sum of %f,%f,%f is %f",a,b,c,a+b+c);
    return 0;
}
